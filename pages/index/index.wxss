.navContaina .swiper {
  position: relative
}
.navContaina .swiper swiper-item image{
  width: 100%;
  height:100%;
  border-radius: 20rpx
}
.navContaina .swiper swiper-item text{
  position: fixed;
  right: 0;
  bottom: 0;
  z-index: 9999;
  color: white;
  padding: 10rpx 10rpx;
  font-size: 20rpx;
  border-radius: 20rpx 0 20rpx 0
}
.nav {
  display: flex;
}
.nav .nav-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-grow: 1
}

.nav .nav-item text{
  font-size: 28rpx
}

.nav .nav-item .iconfont{
  width: 100rpx;
  height:100rpx;
  background-color: rgb(240, 19, 19);
  text-align: center;
  line-height: 100rpx;
  border-radius: 50%;
  font-size: 48rpx;
  color: white;
  margin: 20rpx 0
}

.headerTitle{
  padding: 40rpx 20rpx;
}

.recommendScroll{
  display: flex;
  padding-top: 20rpx;
  height: 340rpx
}

.recommendScroll .scrollItem{
  /* 收缩 ：0就是不收缩 */
  /* flex-shrink: 0; */
  width: 200rpx;
  margin-right: 20rpx;
}

.recommendScroll .scrollItem image{
  width: 200rpx;
  height:200rpx;
  border-radius: 20rpx
}
.recommendScroll .scrollItem view{
  overflow: hidden;
  /* text-overflow:ellipsis; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.footer{
  padding: 0 20rpx
}

.footer .footerHeader .footerTitle{
  font-size: 28rpx;
  color: #666
}

.footer .footerHeader .footerContent{
  display: flex;
  justify-content: space-between
}

.footer .footerHeader .footerContent view{
  font-size: 20rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid;
  border-radius: 15rpx
}

.topContainer{
  padding: 0 20rpx
}

.topContainer .topSwiper{
  height: 410rpx;
  /* background: red */
  
}

.topContainer .topSwiper swiper-item .content{
  font-size: 26rpx
}
.topContainer .topSwiper swiper-item .top{
  width: 96%;
  background: #fbfbfb
}
.topContainer .topSwiper swiper-item image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
  flex-shrink: 0
}

.topContainer .topSwiper swiper-item .contentItem{
  display: flex;
  align-items: center;
  margin-top: 20rpx
}

.topContainer .topSwiper swiper-item .contentItem .index{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  flex-shrink: 0;
}

.topContainer .topSwiper swiper-item .contentItem text{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


