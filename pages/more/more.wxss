.handle{
  padding-top: 20rpx;
  display: -webkit-flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
   height: 60rpx;
   border-bottom: 1rpx solid #666
}

.handle .title{
  /* 收缩 ：0就是不收缩 */
  flex-shrink: 0;
  display: flex;
}

.handle .title text{
  width: 90rpx;
  margin:10rpx 20rpx;
}

.handle .title text.a{
  color: red;
  text-decoration: underline
}


swiper swiper-item image{
  margin-top: 40rpx;
  width: 100%;
  height:100%;
}

.recommendScroll{
  display: flex;
  padding-top: 20rpx;
  height: 340rpx;
  display: -webkit-flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
}

.recommendScroll .scrollItem{
  width: 200rpx;
  margin:20rpx 20rpx;
  word-wrap: break-word;
}

.recommendScroll .scrollItem image{
  width: 200rpx;
  height:200rpx;
  border-radius: 20rpx
}
.recommendScroll .scrollItem view{
  font-size: 28rpx;
  overflow: hidden;
  /* text-overflow:ellipsis; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}